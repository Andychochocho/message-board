{{#if updateQuestionForm}}
  <h3>Update {{question.author}}'s question</h3>

  <div>
    <form>
      <div class="form-group">
        <label for="author">Username</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="content">Question</label>
        {{input value=content id="content"}}
      </div>

      <div class="form-group">
        <label for="notes">Details</label>
        {{input value=notes id="notes"}}
      </div>
      <button {{action 'formHide' question}}>Hide</button>
      <button {{action 'update' question}}>Update</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
